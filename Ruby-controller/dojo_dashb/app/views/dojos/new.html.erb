<h1>New Dojo</h1>
<form action="/dojos" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<input type="text" name="dojo[branch]" placeholder="Branch">
	<input type="text" name="dojo[street]" placeholder="Street">
	<input type="text" name="dojo[city]" placeholder="City">
	<input type="text" name="dojo[state]" placeholder="State">
	<button type="submit">Create</button>
</form>
<% if flash[:error] %>
	<ul>
		<% flash[:error].each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>

<a href="/dojos">Go Back</a>