<h1><%= @dojo.branch %> Dojo</h1>
<a href="/dojos/<%= @dojo.id %>/edit">Edit</a>
<ul>
	<li>Address: <%= @dojo.street %></li>
	<li>City: <%= @dojo.city %></li>
	<li>State: <%= @dojo.state %></li>
</ul>
<h2>Student Roster</h2>
<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Actions</th>
	</tr>
	<% @student.each do |student| %>
		<tr>
			<td><%= student.first_name %></td>
			<td><%= student.last_name %></td>
			<td><%= student.email %></td>
			<td>
				<a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %>">Show</a>
				<a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %>/edit">Edit</a>
				<a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %>" data-method="delete">Delete</a>
			</td>
		</tr>
	<% end %>
</table>
<a href="/">Home</a>
<a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a>