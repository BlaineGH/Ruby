<% content_for :left_column do %>
	<h1>All Users</h1>
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">First Name</th>
				<th scope="col">Last Name</th>
				<th scope="col">Favorite Language</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.language %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% end %>
<% content_for :right_column do %>
	<h1>New User</h1>
	<% if flash[:error] %>
	<ul>
		<% flash[:error].each do |error| %>
		<li class="errors"><%= error %></li>
		<% end %>
	</ul>
	<% end %>
	<form action="users" method="post">
		<div class="form-group">
			<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
		</div>
		<div class="form-group">
			<input type="text" class="form-control" name="user[first_name]" placeholder="First Name">
		</div>
		<div class="form-group">
			<input type="text" class="form-control" name="user[last_name]" placeholder="Last Name">
		</div>
		<div class="form-group">
			<select class="form-control" name="user[language]">
				<option value="javascript">JS</option>
				<option value="html">HTML</option>
				<option value="ruby">Ruby</option>
				<option value="python">Python</option>
			</select>
		</div>
		<input type="submit" class="btn btn-primary">
	</form>
	<a id="link" class="btn btn-info" href="/posts" role="button">All Posts</a>
<% end %>